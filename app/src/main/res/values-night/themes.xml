<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Music_player" parent="Theme.Material3.Dark">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_212121</item>
        <item name="colorPrimaryVariant">@color/color_3700B3</item>
        <item name="colorOnPrimary">@color/color_FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/color_018786</item>
        <item name="colorOnSecondary">@color/color_000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/color_282828</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashscreenContent">@drawable/ic_splash</item>
        <item name="android:colorBackground">@color/color_282828</item>
        <item name="colorPrimaryContainer">@color/color_7F171717</item>
        <item name="materialButtonStyle">@style/Widget.MusicPlayer.Button.IconButton</item>
    </style>
</resources>